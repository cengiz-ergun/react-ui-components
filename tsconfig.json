{
  "compilerOptions": {
    "target": "ES6",
    "typeRoots": ["node_modules/@types"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/__mocks__/handlers.js",
    "src/__mocks__/character.ts",
    "src/lib/word-slicer/wordSlicer.ts",
    "src/lib/error/CustomError.js"
  ],
  "exclude": ["node_modules"]
}
